<h3>My Payments</h3>

<table class="table table-striped table-bordered">
  <tr>
    <th>#</th>
  	<th>Batch</th>
  	<th>Installment</th>
    <th>Date</th>
  	<th>Amount</th>
  </tr>
  <% @installments.flatten.each_with_index do |installment,i|%>
  <tr>
    <td><%= i+1 %></td>
  	<td><%= installment.batch_student.batch.name %></td>
  	<td><%= installment.title %></td>
    <td><%= installment.created_at.to_date %></td>
  	<td><%= installment.amount %></td>
  </tr>
  <%end%>
</table>
