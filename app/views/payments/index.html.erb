<h3>Payments</h3>

<div class="col-md-9">
	<table class="table table-striped table-bordered">
	  <thead>
	    <tr>
	      <th>#</th>
	      <th>Student</th>
	      <th>Batch</th>
	      <th>Installment</th>
	      <th>Amount</th>
	      <th>Status</th>
	    </tr>    
	  </thead>
	  <tbody>
	    <%@installments.each_with_index do |installment,i|%>
	    <tr>
	      <td><%= i+1 %></td>
	      <td> <%= installment.batch_student.user.name %></td>
	      <td><%= installment.batch_student.batch.name %></td>
	      <td><%= installment.title%></td>
	      <td>Rs.<%= installment.amount %></td>
		<% if installment.order %>
	      <td><%= installment.order.status %></td>
	    <%end%>
	    </tr>
	    <%end%>    
	  </tbody>
	</table>	
</div>
